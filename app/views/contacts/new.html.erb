<div class="contact_form">
  <h2> Your Message </h2>
  <% form_for @contact do |f| %>

    <fieldset>
      <label>Email Address</label>
      <%= f.text_field :email %>
      <%= f.error_message_on :email %>
    </fieldset>

    <fieldset>
      <label>Message</label>
      <%= f.text_area :message %>
      <%= f.error_message_on :message %>
    </fieldset>

    <%= submit_tag 'send' %>

  <% end %>
</div>

